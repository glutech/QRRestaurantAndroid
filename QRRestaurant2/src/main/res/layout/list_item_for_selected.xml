<?xml version="1.0" encoding="utf-8"?>
<cn.com.zdez.qrrestaurant.layouts.SelectedItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_title"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:padding="3dp"
            android:text="title_placeholder"
            android:textSize="@dimen/abc_action_bar_title_text_size"
            />
        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dish_title"
            android:layout_alignParentLeft="true"
            android:paddingTop="5dp"
            android:text="￥42"
            android:textColor="@color/red"
            />
        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 元/每份"
            android:paddingTop="5dp"
            android:layout_below="@id/tv_dish_title"
            android:layout_toRightOf="@id/tv_dish_price"
            />

        <LinearLayout
            android:id="@+id/view_add_area"
            android:clickable="true"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/btn_delete_one"
                android:layout_margin="3dp"
                android:clickable="true"
                android:src="@drawable/icon_delete"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_item_seleted_count"
                android:text="x1"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:clickable="true"
                android:layout_margin="3dp"
                android:id="@+id/btn_add_one"
                android:src="@drawable/icon_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

</cn.com.zdez.qrrestaurant.layouts.SelectedItemLayout>