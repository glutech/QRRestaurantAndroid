<?xml version="1.0" encoding="utf-8"?>
<cn.com.zdez.qrrestaurant.layouts.HistoyOrdersListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/his_order_rest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这时餐厅名称"
                android:textSize="@dimen/abc_action_bar_title_text_size"
                android:padding="5dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/his_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="这时订单总价"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/his_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这时下单时间"
            android:padding="5dp"
            android:gravity="right" />

    </LinearLayout>


</cn.com.zdez.qrrestaurant.layouts.HistoyOrdersListItem>