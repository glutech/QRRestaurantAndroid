<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.zdez.qrrestaurant.RestaurantDetailActivity"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/tv_rests_alert"
        android:gravity="center"
        android:background="@color/red_light_t_80"
        android:text="提示消息"
        android:padding="5sp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_onloading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在加载..."
        android:padding="5sp"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/bg_bar_t"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_comment_rest"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="添加评论"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="添加图片"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="随便写点"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
