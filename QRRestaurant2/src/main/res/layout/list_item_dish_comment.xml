<?xml version="1.0" encoding="utf-8"?>
<cn.com.zdez.qrrestaurant.layouts.DishCommentsListItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rv_comment_ud"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dish_comment_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:text="user_id" />

        <TextView
            android:id="@+id/tv_dish_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_alignParentRight="true"
            android:text="2014-1-1" />

    </RelativeLayout>

    <RatingBar
        android:id="@+id/rb_dish_comment_rate"
        android:layout_below="@id/rv_comment_ud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:ratingBarStyleSmall"
        android:rating="5"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/tv_dish_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb_dish_comment_rate"
        android:text="评论内容"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" />


</cn.com.zdez.qrrestaurant.layouts.DishCommentsListItemLayout>